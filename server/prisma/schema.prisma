generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  totalpoints Int @default(0)
  dailies   Daily[]
  weeklies  Weekly[]
  monthlies Monthly[]
  yearlies  Yearly[]
}

model Daily {
  id        Int      @id @default(autoincrement())
  goal      String
  createdAt DateTime @default(now())
  points    Int      @default(0)

  weeklyProgress Float? @default(0)

  // Relations
  user   User @relation(fields: [userId], references: [id])
  userId Int

  weekly   Weekly? @relation(fields: [weeklyId], references: [id])
  weeklyId Int?

  monthly   Monthly? @relation(fields: [monthlyId], references: [id])
  monthlyId Int?

  yearly   Yearly? @relation(fields: [yearlyId], references: [id])
  yearlyId Int?
}

model Weekly {
  id              Int      @id @default(autoincrement())
  goal            String
  createdAt       DateTime @default(now())
  points          Int      @default(0)
  progress        Float?   @default(0)
  monthlyProgress Float?   @default(0)

  user   User @relation(fields: [userId], references: [id])
  userId Int

  dailies   Daily[]
  monthly   Monthly? @relation(fields: [monthlyId], references: [id])
  monthlyId Int?

  yearly   Yearly? @relation(fields: [yearlyId], references: [id])
  yearlyId Int?
}

model Monthly {
  id        Int      @id @default(autoincrement())
  goal      String
  createdAt DateTime @default(now())
  points    Int      @default(0)
  progress  Float?   @default(0)

  yearlyProgress Float? @default(0)

  user   User @relation(fields: [userId], references: [id])
  userId Int

  weeklies Weekly[]
  dailies  Daily[]
  yearly   Yearly?  @relation(fields: [yearlyId], references: [id])
  yearlyId Int?
}

model Yearly {
  id        Int      @id @default(autoincrement())
  goal      String
  createdAt DateTime @default(now())
  points    Int      @default(0)
  progress  Float?   @default(0)

  user   User @relation(fields: [userId], references: [id])
  userId Int

  monthlies Monthly[]
  weeklies  Weekly[]
  dailies   Daily[]
}
